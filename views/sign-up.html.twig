{% extends 'base-backend.html.twig' %}

{% block title %}INSCRIPTION{% endblock %}

{% block body %}
    <div class="page">
        <!-- Main Content -->
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 center-me">
                    <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
                    <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
                    <!-- NOTE: To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
                    <form class="form-group-lg login-form login-form-width" name="loginForm" id="loginForm" action="{{ path('signup-check') }}" method="post">
                        <div class="row">
                            <div class="col-lg-12 login-form-header text-center">
                                <h3 class="no-margin-top"><a class="my-link-style" href="{{ path('home') }}">majolieplume.blog<a></a> <span class="gold">Admin</span> </h3>

                                <p>Cr√©er un compte admininstrateur:</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-suivre  col-lg-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1 col-sm-10 col-sm-offset-1 col-xs-offset-1 col-xs-10 col-xs-offset-1 input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa-lg fa-fw"></i></span>
                                <input id="username" name="username" class="form-control" type="text" required placeholder="Votre login">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-suivre col-lg-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1 col-sm-10 col-sm-offset-1 col-xs-offset-1 col-xs-10 col-xs-offset-1 input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope fa-lg fa-fw"></i></span>
                                <input id="email" name="email" class="form-control" type="email" required placeholder="Votre e-mail">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-suivre col-lg-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1 col-sm-10 col-sm-offset-1 col-xs-offset-1 col-xs-10 col-xs-offset-1 input-group">
