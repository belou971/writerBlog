                                <input id="password" name="password" class="form-control" type="password" required placeholder="Votre mot de passe">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-suivre col-lg-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1 col-sm-10 col-sm-offset-1 col-xs-offset-1 col-xs-10 col-xs-offset-1 input-group">
                                <span class="input-group-addon"><i class="fa fa-unlock-alt fa-lg fa-fw"></i></span>
                                <input id="publicname" name="publicname" class="form-control" type="text" required placeholder="Votre nom Web">
