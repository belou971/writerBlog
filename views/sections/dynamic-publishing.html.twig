<script type="text/javascript">
    $('.status').click(function(event) {
        event.preventDefault();

        var $classToHide = 'fa-eye-slash red-color',
                $classToPublish = 'fa-eye green-color';

        if($(this).hasClass("fa-eye")) {
            var $url = '{{ path("hidden_post") }}';
            changePostStatus($(this), $url, $classToPublish, $classToHide);
        }
        if($(this).hasClass("fa-eye-slash")) {
            var $url = '{{ path("published_post") }}';
            changePostStatus($(this), $url, $classToHide, $classToPublish);
        }
    });
</script>