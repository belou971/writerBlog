{% extends 'base-backend.html.twig' %}

{% block title %}Administration{% endblock %}

{% block css %}
<!-- Bootstrap Core CSS -->
<link href="{{ asset('/lib/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
<!-- Theme CSS -->
<link href="{{ asset('/css/writerblog-frontend.css') }}" rel="stylesheet">
<link href="{{ asset('/css/writerblog-backend.css') }}" rel="stylesheet">
{% endblock %}

{% block nav %}{% endblock %}

{% block body %}
<div class="page">
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 center-me">
                <form class="form-group-lg login-form login-form-width" name="loginForm" id="loginForm" action="{{ path('admin_login_check') }} "method="post">
                    <div class="row">
                        <div class="col-lg-12 login-form-header text-center">
                            <h3 class="no-margin-top"><a class="my-link-style" href="{{ path('home') }}">majolieplume.blog</a> <span class="gold">Admin</span> </h3>

                            <p>Veuillez vous identifier:</p>
                        </div>
                    </div>

                    {% if error %}
                    <div class="row">
                        <div class="form-suivre col-lg-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1 col-sm-10 col-sm-offset-1 col-xs-offset-1 col-xs-10 col-xs-offset-1 input-group">
                            <p class="alert alert-danger">
                                Ooups, Echec! {{ error }}
                            </p>
                        </div>
                    </div>
                    {%  endif %}

                    <div class="row">
                        <div class="form-suivre  col-lg-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1 col-sm-10 col-sm-offset-1 col-xs-offset-1 col-xs-10 col-xs-offset-1 input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa-lg fa-fw"></i></span>
                            <input id="login" name="_username" class="form-control" value="{{ last_username }}" type="text" placeholder="Votre login" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-suivre col-lg-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1 col-sm-10 col-sm-offset-1 col-xs-offset-1 col-xs-10 col-xs-offset-1 input-group">
                            <span class="input-group-addon"><i class="fa fa-unlock-alt fa-lg fa-fw"></i></span>
                            <input id="password" name="_password" class="form-control" type="password" placeholder="Votre mot de passe" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-group col-lg-offset-1 col-lg-10 col-lg-offset-1 col-sm-offset-1 col-sm-10 col-sm-offset-1 col-xs-offset-1 col-xs-10 col-xs-offset-1">
                            <button type="submit" class="btn btn-lg btn-block btn-primary">se connecter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}{% endblock %}